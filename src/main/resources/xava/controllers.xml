<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>
    
    <!-- Environment variable:
    <env-var name="inventorymanagementapplication_DEFAULT_YEAR" value="2015"/> 
    -->
    
    <!-- Session object:
    <object name="inventorymanagementapplication_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>    
    -->
    
    <!-- Controller:
    <controller name="Teacher">
    	<extends controller="Typical"/>
    	<action name="new" icon="library-plus" keystroke="Control N"
        	class="actions.CreateTeacher">
    	</action>
	</controller>    
    -->

    <controller name="ReadOnlyController">

        <!-- Ver lista -->
        <action name="list"
                mode="detail"
                class="org.openxava.actions.GoListAction"/>

    </controller>


    <controller name="EditOnlyController">

        <!-- Guardar cambios -->
        <action name="save"
                mode="detail"
                class="org.openxava.actions.SaveAction"/>

        <!-- Cancelar cambios -->
        <action name="cancel"
                mode="detail"
                class="org.openxava.actions.CancelAction"/>

        <!-- Ver lista -->
        <action name="list"
                mode="detail"
                class="org.openxava.actions.GoListAction"/>

    </controller>

    <controller name="CreateOnlyController">

        <!-- Crear nuevo registro -->
        <action name="new"
                mode="list"
                class="org.openxava.actions.NewAction"/>

        <!-- Guardar el nuevo registro -->
        <action name="save"
                mode="detail"
                class="org.openxava.actions.SaveAction"/>

        <!-- Cancelar creación -->
        <action name="cancel"
                mode="detail"
                class="org.openxava.actions.CancelAction"/>

        <!-- Ver lista -->
        <action name="list"
                mode="detail"
                class="org.openxava.actions.GoListAction"/>

    </controller>

    <controller name="RestockPlan">

        <!-- Crear nuevo registro -->
        <action name="new"
                mode="list"
                class="org.openxava.actions.NewAction"/>

        <action name="generate"
                class="com.mascotin.inventorymanagementapplication.action.GenerateRestockPlanAction"
                mode="detail"/>
    </controller>

</controllers>