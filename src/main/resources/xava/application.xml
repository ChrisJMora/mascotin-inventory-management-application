<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE application SYSTEM "dtds/application.dtd">

<application name="inventorymanagementapplication"> 
	
	<!-- 
	A default module for each entity is assumed with the
	controllers on <default-module/>
	-->
	<default-module>		  
		<controller name="Typical"/>		
	</default-module>
	
	<!-- 
	You can define additional modules, for example:	  
	<module name="OnlyReadTeacher">
		<model name="Teacher"/>
		<controller name="Print"/>
	</module>		
	-->

	<module name="Product">
		<model name="Product"/>
		<controller name="EditOnlyController"/>
	</module>

	<module name="PurchaseOrder">
		<model name="PurchaseOrder"/>
		<controller name="CreateOnlyController"/>
	</module>

	<module name="RestockInventoryPlanner">
		<model name="RestockInventoryPlanner"/>
		<controller name="RestockPlan"/>
	</module>

</application>
